        <shape>
            <size android:height="@dimen/pc_seekbar_bg_height" />
            <solid android:color="@color/icflix_bg_player_seeekbar" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="@color/icflix_bg_player_seeekbar" />
